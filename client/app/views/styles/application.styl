// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here
@import '_states'
@import '_layout'
@import '_responsive'

body.application, input, textarea
    color: #bbb
    background: none repeat scroll 0 0 rgba(30, 30, 30, 0.8)

#content
    padding: 2em

a, a:visited
    color: #27aaf2
    text-decoration: none
a:focus
    outline: none

button
    background-color: inherit

#create-bookmark-form
    margin: 0
    padding: 0 2em
    background: #222
    border: 1px solid #262626

    h1
        cursor: pointer
        background: #1c1c1c
        border-top: 1px solid #262626
        border-bottom:1px solid #161712
        padding: .3em

    p.last
        display: inline-block

    input
        display: block
        margin: 1em
        padding: .5em
        width: 24em
        background: #262626
        border: 1px double #171717

    textarea
        display: block
        margin: 1em
        padding: .5em
        width: 50em
        background: #262626
        border: 1px double #171717

    .url-field
        width: 50em
    .tags-field, .title-field
        display: inline-block

    .buttons
        display: inline-block
        vertical-align: bottom
        margin-bottom: 1em
        padding-bottom: 1em

        button
           border: none
           &.clean
               img
                   width: 32px
                   height: 32px

#bookmark-list
    margin: 2em 0
    padding: 0 2em
    background: #222
    border: 1px solid #262626

    h1
        background: #1c1c1c
        border-top: 1px solid #262626
        border-bottom:1px solid #161712
        padding: .3em

    .tools
        .search
            display: inline-block
            margin: 1em
            padding: .5em
            width: 24em
            background: #262626
            border: 1px double #171717
       .sort
           vertical-align: middle
           border: none
           img
               height: 32px
               width: 32px

    ul
        list-style: none
        li
            border-top: 1px solid #666666;
            padding: .5em 0;

    .bookmark
        margin: .5em 0
        div, a
            padding: .5em
            margin: .5em
            display: table-cell
        .buttons
            button
                vertical-align: top
                border: none
                img
                    height: 32px
                    width: 32px
        .title
            font-weight: bold
        .url
            max-width: 20em
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
            &:hover
                max-width: none
                overflow: normal
                text-overflow: inherit
        .tags
            max-width: 20%
        .description
            margin: 20px
