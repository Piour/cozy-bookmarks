// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here
@import '_states'
@import '_layout'
@import '_responsive'

main-color = #bbb

body.application, input, textarea
    color: main-color;
    padding: 0;
    background: none repeat scroll 0 0 rgba(40,40,40,0.8);

#content
    padding: 1em
    input, textarea
        border: #1f1f1f
        color: #eee
    .row
        margin: 0 .5em
    .form-control
        background: #262626
    .panel
        border: #1f1f1f
        background: main-color
    .panel-heading
        background: #1f1f1f
        border: #1f1f1f
        color: main-color
        .panel-title
            font-weight: bold
            font-size: 2em
            padding: .5em
    .panel-body
        background: #1f1f1f
        color: main-color
    .btn
        margin: 0 .5em
        padding: 0.1
        opacity: 0.8
        vertical-align: middle

#create-bookmark-form
    textarea
        height: 5em
    .create
        font-size: 2.5em
    .full-form
        display: none

#bookmarks-file
    display: none

.import
.export
    position: absolute
    top: 1.5em
    button
        background: transparent
        color: #373
        border: 0
        font-size: 1.5em
    .import-failed
        padding: 0
        margin: 0
    .imported
        padding: 0
        margin: 0
.import
    right: 1em
.export
    right: 3em

#bookmarks-list
    ul
        list-style: none
    li
        border-top: 1px solid #333
        padding: .5em 0;
    .bookmark
        .btn
            visibility: hidden
            margin: 0
            padding: 0.1em
            div
                vertical-align: initial
        &:hover
            .btn
                visibility: visible
        div
            display: inline-block
            max-width: 65%
            margin: .0 .5em
            white-space: normal
            vertical-align: middle
            &.full
                max-width: 80%
        .description
            margin: .5em 4em
        .info
            white-space: nowrap
            max-width: 65%
        .url
            max-width: 30%
            overflow: hidden
            white-space: nowrap
            text-overflow: ellipsis
            &:hover
                white-space: normal
                max-width: none

.alertify-dialog, .alertify-buttons, .alertify-log
    background: #000
    opacity: 0.8
    text-align: center
    color: main-color
.alertify-button-ok:
    background: #000
    box-shadow: none
.alertify-message
    font-size: 1.5em
